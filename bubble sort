bubble sort:

#include <stdio.h>
int main()
{
    int n=5,i,j,temp;
    int arr[5]={10,22,2,9,11};
    for(i=0;i<n-1;i++)
    {
        for(j=0;j<n-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
              
            }
        }

    }
    for(i=0;i<n;i++)
    {
        printf("%d\n",arr[i]);
    }
}

using function :


#include <stdio.h>
void bubble_sort()
{
    int n=5,i,j,temp;
    int arr[5]={10,22,2,9,11};
    for(i=0;i<n-1;i++)
    {
        for(j=0;j<n-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
              
            }
        }

    }
    for(i=0;i<n;i++)
    {
        printf("%d\n",arr[i]);
    }
}
int main()
{
    bubble_sort();
    return 0;
}



output :
2
9
10
11
22



